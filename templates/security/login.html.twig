{% extends 'security/base.html.twig' %}

{% block title %}Se connecter!{% endblock %}



{% block header %}
    <header style="background-image: url('{{ asset('assets/img/homepage.jpg')}}')";>

        <nav class="d-flex space-around">
            <div class="logo">
                <a href="">
                    <img src="{{ asset('assets/img/logo.png') }}" alt="logo" class="resp">
                </a>
            </div>



            <ul class="d-flex space-around align-items">
                <li> <a href="">Présentation</a></li>
                <li> <a href=""> Actualités</a></li>
                <li> <a href=""> M'inscrire</a></li>
                <li> <a href="">Me connecter</a></li>
            </ul>
        </nav>
    </header>
{% endblock header %}

{% block main %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 text-center m-5">
            Vous êtes connecté avec {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Veuillez vous connecter</h1>

    <div class="form-group col_12 container d-flex column align-items-center m-5">
        <div class="form-group col-6 col-md-4 col-lg-3">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" aria-describedby="emailHelp"required autofocus>
            <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais vos données.</small>
        </div>
    </div>

    <div class="form-group col_12 container d-flex column align-items-center m-5">
        <div class="form-group col-6 col-md-4 col-lg-3">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>

        <div>
            <button class="btn btn-lg btn-primary" type="submit">
                Me connecter
            </button>
        </div>
    </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="form-group col-12 col-md-2 col-lg-2 text-center">

    </div>
</form>
{% endblock %}
