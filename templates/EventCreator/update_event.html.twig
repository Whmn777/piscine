        <div class="form-group col-6 col-md-4 col-lg-3 m-2">
            {{ form_errors(eventFormView.image) }}
            {{ form_label(eventFormView.image) }}
            {{ form_widget(eventFormView.image, {'attr': {'class':'form-control'}}) }}
        </div>

        <div class="form-group col-6 col-md-2 col-lg-2">
            {{ form_widget(eventFormView.Valider, {'attr': {'class':'form-submit btn btn-secondary'}}) }}
        </div>




    </div>
    {{ form_end(eventFormView) }}

    <a href="{{ path('EventCreator_home') }}">Retour aux events</a>


{% endblock main %}